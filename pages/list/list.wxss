/* pages/list/list.wxss */
.banner {
  width:100%;
  height: 600rpx;
}
.banner>swiper-item>image {
  width: 100%;
  height: 600rpx;
}
.news {
  display: flex;
  width: 100%;
  background: #fff;
  margin-bottom: 20rpx;
  flex-direction: column;
  padding: 20rpx;
} 
.title {
  width: 100%;
  font-size: 40rpx;
}
.news text {
  width: 100%;
  margin: 0 10rpx;
}
.details {
  display: flex;
  width: 100%;
  flex-direction: column;
  background: #fff;
}
.details>text:nth-child(2) {
  font-size: 36rpx;
  color: #333;
  margin: 25rpx;
}
.imgShow  {
  display: flex;
  width: 100%;
  flex-wrap: wrap;
}
.imgShow image {
  width: 100rpx;
  height: 100rpx;
  margin: 10rpx 10rpx;
}